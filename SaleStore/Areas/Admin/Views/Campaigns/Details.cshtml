@model SaleStore.Models.Campaign

@{
    ViewData["Title"] = "Kampanya Detayları";
}
<br />
<div class="row">
    <div class="col-md-12 col-xs-11 col-sm-11">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">

                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Kampanya Detayları</span>
                </div>

            </div>
            <div class="portlet-body form">
                <div class="form-body">

                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Slogan)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Slogan)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.CampaignStartDate)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.CampaignStartDate)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.CampaignEndDate)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.CampaignEndDate)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Image)
                        </dt>
                        <dd>
                            <img style="width:80px;" class="img-thumbnail img-responsive" src="/@Html.DisplayFor(model => model.Image)" />
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.CreateDate)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.CreateDate)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.CreatedBy)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.CreatedBy)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.UpdatedBy)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.UpdatedBy)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.UpdateDate)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.UpdateDate)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Category.Name)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Category.Name)
                        </dd>
                    </dl>
                </div>
                <div class="form-group">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Düzenle</a> |
                    <a asp-action="Index" class="btn default btn-outline">Listeye Geri Dön</a>


                </div>
            </div>
        </div>
    </div>
</div>